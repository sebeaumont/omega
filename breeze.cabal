  build-depends:       base
                     , mtl
                     , bitvec
                     , vector
                     , deepseq
                     , primitive
                     , mwc-random
                     , containers
                     , unordered-containers
                     , sort
                     , cryptohash-sha256
                     , text
  hs-source-dirs:      src
  ghc-options:       -Wall -O3
  default-language:    Haskell2010

  
executable words
  build-depends:      base
                    , breeze
                    , text
  ghc-options:        -Wall -O3 -threaded
  hs-source-dirs:     utl
  main-is:            words.hs
  default-language:   Haskell2010


executable index
  build-depends:      base
                    , breeze
                    , text
                    , criterion
  ghc-options:        -Wall -O3 -threaded
  hs-source-dirs:     tst
  main-is:            Main.hs
  default-language:   Haskell2010

  
executable search
  build-depends:      base
                    , breeze
                    , text
                    , criterion
  ghc-options:        -Wall -O3 -threaded
