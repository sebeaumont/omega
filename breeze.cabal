library
  exposed-modules:     Data.SDM.VectorSpace
                     , Data.SDM.VectorSpace.Vector
                     , Data.SDM.VectorSpace.SparseVector
                     , Data.SDM.VectorSpace.DenseVector
                     , Data.SDM.VectorSpace.SparseRandom
                     , Data.SDM.Entropy
                     , Data.SDM.SemanticVector
                     , Data.SDM.Index
                     , Data.Text.Tokenize
                     
